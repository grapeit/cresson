#!/bin/bash

docker build -t cresson-db .
[ $? -eq 0 ] || exit $?

docker stop cresson-db
mkdir -p /var/lib/cresson/mysql
docker run --rm --detach \
    --name=cresson-db \
    --network=cresson-network \
    -e MYSQL_ROOT_PASSWORD=$CRESSON_MYSQL_ROOT_PASSWORD \
    -v /var/lib/cresson/mysql:/var/lib/mysql \
    cresson-db
